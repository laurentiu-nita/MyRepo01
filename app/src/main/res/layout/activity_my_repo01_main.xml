<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRepo01MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/navigate_to_secondary_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="@string/navigate_to_secondary_activity"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="8"
            android:columnCount="3"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/left_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="7"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="@string/zero"
                android:saveEnabled="false"
                android:enabled="false"/>

            <EditText
                android:id="@+id/right_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="7"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center"
                android:text="@string/zero"
                android:saveEnabled="false"
                android:enabled="false"/>

            <Button
                android:id="@+id/press_me_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="9"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:text="@string/press_me_button"
                />

            <Button
                android:id="@+id/press_me_too_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="9"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:textAlignment="center"
                android:text="@string/press_me_too_button"/>

        </GridLayout>

    </LinearLayout>

</LinearLayout>